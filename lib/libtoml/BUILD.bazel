    deps  = [
        "//lib:utils",
        # "//vendored/tomlc99:toml",
        "//vendored/logc",
        ":table", ":array", ":datetime"
    ] + select({
        "//config/profile:dev?": ["//dev"],
        "//config/profile:test?": ["//dev"],
        "//conditions:default":  []
    }),
    copts = COPTS + [
        "-Idev",
        "-Iexternal/libs7/dev",
        "-Ilib/libtoml",
        "-Ivendored/logc",
        "-Iexternal/libs7/vendored/logc",
        # "-Ivendored/tomlc99",
        # "-Iexternal/libs7/vendored/tomlc99",
    ] + select({
        "//config/profile:dev?": ["-Idev"],
        "//config/profile:test?": ["-Idev"],
        "//conditions:default":  []
    }),
    linkopts = LINKOPTS,
    local_defines = DEFINES + CLIB_DEFINES,
)

