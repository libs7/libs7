cc_library(
    name  = "toml_s7_archive", # emits libtoml_s7_archive.a
    linkstatic = True,
    alwayslink = True, # ensure init fn sym available for dlsym
    srcs  = [
        "//src:s7.h",
        "libtoml_s7.c",
        # "//lib:utils.c",
        # "//lib:utils.h",
         # "//vendored/tomlc99:toml.c"
        "toml.c", "toml.h",
        "tomlx.c", "tomlx.h"
