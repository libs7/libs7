load("@bazel_skylib//rules:diff_test.bzl", "diff_test")
load("//test/app:BUILD.bzl", "test_mustachios")

diff_test(
    name  = "json",
    file1 = "colors.expected",
    file2 = "json.actual",
    timeout = "short"
)

test_mustachios(
    name     = "json_actual",
    script   = "colors_main.scm",
    out      = "json.actual",
    data     = "colors.json",
    template = "colors.mustache"
)

diff_test(
    name  = "scm",
    file1 = "colors.expected",
