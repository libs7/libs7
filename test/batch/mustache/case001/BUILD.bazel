load("@bazel_skylib//rules:diff_test.bzl", "diff_test")
load("//test/app:BUILD.bzl", "test_mustachios")

diff_test(
    name  = "json",
    file1 = "case001.expected",
    file2 = "json.actual",
    timeout = "short"
)

test_mustachios(
    name = "json_actual",
    script = "case001_main.scm",
    out  = "json.actual",
    data = "data.json",
    template = "case001.mustache"
)

diff_test(
    name  = "toml",
